= render partial: 'shared/header',
         locals: { title: t('.title'),
                   header: t('.header'),
                   sub_header: t('.sub_header') }
%section
  .container
    .row
      .col-sm-12
        %h2= t('.contact.header')
        %hr
    .row
      .col-sm-6
        %p= t('.contact.body')
        %p
          %b E:
          = t('.contact.email')
          %br
          %b P:
          = t('.contact.phone')
        %p
          = t('.contact.address.street')
          %br
          = t('.contact.address.floor')
          %br
          = t('.contact.address.city')
        %h5= t('.contact.tech_support.title')
        %b E:
        = t('.contact.tech_support.email')
        %br
        %b P:
        = t('.contact.tech_support.phone')
      .col-sm-6
        %embed{src: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d394.25969559549804!2d-122.4196691477756!3d37.76477943301268!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808f7e2375c71b43%3A0x7d7e9b59f663f700!2s2017+Mission+St%2C+San+Francisco%2C+CA+94110!5e0!3m2!1sen!2sus!4v1475816062708", style: "border:0;width:100%;height:400px;"}
%section
  .container
    .row
      .col-sm-12
        %h2= t('.team.header')
        %hr
    - t('.team.items').each_slice(2) do |items|
      .row
        - items.each do |item|
          .col-sm-6
            .row
              .col-xs-3
                = image_tag "about/#{item[:image]}.png", alt: item[:name] + ' ' + item[:title], class: 'img-fluid img-circle'
              .col-xs-8
                %h5= item[:name]
                = item[:title]
            %br
            %p= item[:body]
%section
  .container
    .row
      .col-sm-12
        %h2= t('.advisors.header')
        %hr
    - t('.advisors.items').each_slice(2) do |items|
      .row
        - items.each do |item|
          .col-sm-6
            .row
              .col-xs-3
                = image_tag "about/#{item[:image]}.png", alt: item[:name], class: 'img-fluid img-circle'
              .col-xs-8
                %h5= item[:name]
            %br
            %p= item[:body]
