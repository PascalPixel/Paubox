%section#home-intro.hero
  .container
    .row
      .col-xs-12
        %h1.p-t-1.m-b-0= t('.hero.header')
        %h2.p-b-1= t('.hero.sub_header')
        = link_to t('.hero.button_cta'), new_user_registration_path, class: 'btn btn-outline-success'
        %button.btn.btn-outline-secondary{'data-target' => '#requestDemo', 'data-toggle' => 'modal'}= t('.hero.button_info')
%section#home-news
  .container
    .row
      .col-sm-12.text-sm-center
        %h2= t('.media.title')
    .row
      .col-sm-1
      - t('.media.media_logos').each do |item|
        .col-sm-2
          %a{href: item[:link], rel: 'nofollow', target: '_blank'}
            = image_tag "media/#{item[:image]}.png", alt: item[:name], class: 'img-fluid'
= render partial: 'shared/solutions_list'
