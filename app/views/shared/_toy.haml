%section#toy
  .container
    .row
      .col-sm-6
        %h4 Paubox Encrypted Email
        %h1{style: "margin-top:-1rem;margin-left:-.1rem;"}
          %b Explained
      .col-sm-3
        %p
          %span.text-primary Click the tabs
          below to compare Paubox to Regular Email and Portals.
      .col-sm-3
        %p
          %span.text-primary Mouseover or tap
          the questionmarks to view more detail about an element.
  .toy
    - (1..3).each do |scene|
      .scene{class: "scene-#{scene}"}
        .fallback
          = image_tag 'toy/encrypted_email.svg', class: 'img-fluid'

        .animated
          .background
            .phone= image_tag 'toy/phone.svg', class: 'img-fluid'
            .base= image_tag 'toy/laptop_base.svg', class: 'img-fluid'
            - if scene == 1
              .left-inbox-back= image_tag 'toy/inbox_left_red_back.svg', class: 'img-fluid'
              .right-inbox-back= image_tag 'toy/inbox_right_red_back.svg', class: 'img-fluid'
            - else
              .left-inbox-back= image_tag 'toy/inbox_left_blue_back.svg', class: 'img-fluid'
              .right-inbox-back= image_tag 'toy/inbox_right_blue_back.svg', class: 'img-fluid'

          .middleground
            - (1..6).each do |line|
              .line{class: "line-#{line}"}
            .laptop><
              .top><
                .back><= image_tag 'toy/laptop_back.svg'
                .front><
                  = image_tag 'toy/laptop_front.svg', class: 'img-fluid'
                  .laptop-screen
                    .laptop-window
                      Password
                      ******
            - (1..2).each do |envelope|
              .envelope{class: "envelope-#{envelope}"}><
                .blue= image_tag 'toy/envelope_blue.svg', class: 'img-fluid'
                .red= image_tag 'toy/envelope_red.svg', class: 'img-fluid'
            .phone-window>< !

          .foreground
            - if scene == 1
              .left-inbox-front= image_tag 'toy/inbox_left_red_front.svg', class: 'img-fluid'
              .right-inbox-front= image_tag 'toy/inbox_right_red_front.svg', class: 'img-fluid'
            - else
              .left-inbox-front= image_tag 'toy/inbox_left_blue_front.svg', class: 'img-fluid'
              .right-inbox-front= image_tag 'toy/inbox_right_blue_front.svg', class: 'img-fluid'
            .popups
              - (1..7).each do |popup|
                .popup{class: "popup-#{popup} #{'right' if (5..7).include? popup}"}
                  .dot
                    %i.mdi.mdi-help
                  .content= t(".scene#{scene}.popup#{popup}")

  .container
    %br
    .row.scene-tabs
      .col-md-4.scene-tab.sceneStarter1
        %h4.text-danger
          %i.mdi.mdi-email-open
          Regular Email
        %p= t(".scene1.body")
      .col-md-4.scene-tab.sceneStarter2
        %h4.text-info
          %i.mdi.mdi-dns
          Portals
        %p= t(".scene2.body")
      .col-md-4.scene-tab.sceneStarter3.active
        %h4.text-primary
          %i.mdi.mdi-email-secure
          Encrypted Email
        %p= t(".scene3.body")
