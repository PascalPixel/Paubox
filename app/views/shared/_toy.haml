%section#toy
  .fallback
    .container
      %h5.text-primary
        %b
          %i.mdi.mdi-email-secure
          = title
      = image_tag 'toy/encrypted_email.svg', class: 'img-fluid'
      %br
      %hr
      %br
      .row
        .col-sm-6
          %h1.m-b-0.text-primary 1
          = simple_format t('.fallback.text1')
        .col-sm-6
          %h1.m-b-0.text-primary 2
          = simple_format t('.fallback.text2')
      .row
        .col-sm-6
          %h1.m-b-0.text-primary 3
          = simple_format t('.fallback.text3')
        .col-sm-6
          %h1.m-b-0.text-primary 4
          = simple_format t('.fallback.text4')
      .row
        .col-sm-12
          .m-b-1= simple_format t('.fallback.text5')
          %button.btn.btn-secondary.replay Play again
  .toy
    .container-fluid
      .clearfix
        .pull-md-left
          %h5.text-primary
            %b
              %i.mdi.mdi-email-secure
              = title
        .pull-md-right
          %button.btn.btn-outline-danger.sceneStarter1 Current Email
          %button.btn.btn-outline-info.sceneStarter2 Traditional Solutions
          %button.btn.btn-outline-primary.sceneStarter3 Paubox Encrypted Email
    .foreground
      .scenes
        - (1..3).each do |scene|
          .scene{class: "scene-#{scene}"}
            - (1..7).each do |popup|
              .popup{class: "popup-#{popup} #{'right' if (5..7).include? popup}"}
                .dot
                  %i.mdi.mdi-help
                .content= t(".scene#{scene}.popup#{popup}")
      .blue
        .left= image_tag 'toy/inbox_left_blue_front.svg'
        .right= image_tag 'toy/inbox_right_blue_front.svg'
      .red
        .left= image_tag 'toy/inbox_left_red_front.svg'
        .right= image_tag 'toy/inbox_right_red_front.svg'
    .middleground
      - (1..6).each do |line|
        .line{class: "line-#{line}"}
      .laptop><
        .top><
          .back><= image_tag 'toy/laptop_back.svg'
          .front><
            = image_tag 'toy/laptop_front.svg'
            .laptop-window>< !
      - (1..6).each do |envelope|
        .envelope{class: "envelope-#{envelope}"}><
          .blue= image_tag 'toy/envelope_blue.svg'
          .red= image_tag 'toy/envelope_red.svg'
      .phone-window>< !
    .background
      .phone= image_tag 'toy/phone.svg'
      .base= image_tag 'toy/laptop_base.svg'
      .blue
        .left= image_tag 'toy/inbox_left_blue_back.svg'
        .right= image_tag 'toy/inbox_right_blue_back.svg'
      .red
        .left= image_tag 'toy/inbox_left_red_back.svg'
        .right= image_tag 'toy/inbox_right_red_back.svg'
